{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./src/",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "comonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./built/",
        "plugins": [
                { "name": "@fimbul/mithotyn" }
        ],
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "types": [
            "node"
        ]
    },
    "include": [
        "./src/**/*.tsx?"
    ]
}
